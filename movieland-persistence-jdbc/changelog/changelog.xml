<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="shalimov" id="1">
        <createTable tableName="movie">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name_russian" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="name_native" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="year_of_release" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="float(24)"/>
            <column name="price" type="float(24)"/>
            <column name="picture_path" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="2">
        <createTable tableName="&quot;user&quot;">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="salt" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="role" defaultValue="U" type="text"/>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="3">
        <createTable tableName="country">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text"/>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="4">
        <createTable tableName="genre">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text"/>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="5">
        <createTable tableName="review">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="&quot;user&quot;" type="int"/>
            <column name="movie" type="int"/>
            <column name="text" type="text"/>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="6">
        <createTable tableName="movie_country">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie" type="int"/>
            <column name="country" type="int"/>
        </createTable>
    </changeSet>
    <changeSet author="shalimov" id="7">
        <createTable tableName="movie_genre">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie" type="int"/>
            <column name="genre" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>